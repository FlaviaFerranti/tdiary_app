<%= form_for(@travel, html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <br>
  <br>
  <div class="field">
    <%= f.text_area :description, placeholder: "Inserisci una descrizione" %>
  </div>

  <span class="picture">
    <%= f.file_field :images, accept: 'image/jpeg,image/gif,image/png' %>
  </span>
  <%= f.submit "Crea", class: "btn btn-primary", id:"bottone" %>

  <script type="text/javascript">
    $('#micropost_picture').bind('change', function() {
        size_in_megabytes = this.files[0].size/1024/1024;
        if (size_in_megabytes > 5) {
            alert('Maximum file size is 5MB. Please choose a smaller file.');
        }
    });
  </script>

<% end %>

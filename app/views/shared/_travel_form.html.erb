<%= form_for(@travel, html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :title, "Travel" %>
  <%= f.text_field :title, placeholder: "Inserisci un titolo", class: 'form-control' %> <br>

  <%= f.text_area :description, placeholder: "Inserisci una descrizione", class: 'form-control' %>


  <span class="picture">
    <%= f.file_field :images, accept: 'image/jpeg,image/gif,image/png' %>
      <div>
        <%= f.label :multiples, 'Seleziona una o piÃ¹ immagini'%>
        <%= f.file_field :multiples, multiple: true %>
      </div>
  </span>
  <%= f.submit "Crea", class: "btn btn-primary", id:"bottone" %>

  <script type="text/javascript">
    $('#travel_images').bind('change', function() {
        size_in_megabytes = this.files[0].size/1024/1024;
        if (size_in_megabytes > 5) {
            alert('Maximum file size is 5MB. Please choose a smaller file.');
        }
    });
    $('#travel_multiples').bind('change', function() {
        size_in_megabytes = this.files[0].size/1024/1024;
        if (size_in_megabytes > 5) {
            alert('Maximum file size is 5MB. Please choose a smaller file.');
        }
    });
  </script>

<% end %>

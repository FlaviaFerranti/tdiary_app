<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
    <%= link_to "Travel Diary", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path, id:"link_barra" %></li>
        <li><%= link_to "Help", help_path, id:"link_barra" %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", '#', id:"link_barra" %></li>
          <li class="dropdown", id:"link_barra">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user, id:"link_barra" %></li>
              <li><%= link_to "Settings", '#', id:"link_barra" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete, id:"link_barra" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path, id:"link_barra" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

<% provide(:title, "Pagina iniziale") %>

<% if user_signed_in? %>
    <div class="row">
        <aside class="col-md-4">
            <section class="user_info">
                <%= render 'shared/user_info' %>
            </section>
            <section class="travel_form">
                <%= render 'shared/stats' %>
            </section>
            <section class="travel_form">
                <%= render 'shared/travel_form' %>
            </section>
        </aside>
        <div class="col-md-8">
                <h3>Most popular travel</h3>
                <ul class = "travels">
                    <%= render @higest_voted %>
                </ul>

            <h3>Travel Feed</h3>
            <%= render 'shared/feed' %>
        </div>
    </div>
<% else %>

    <div class="center jumbotron">
    <h1>Welcome to Travel Diary</h1>


    <h2>Thanks to our web application you'll have the chance to share your life experiences with other users. </h2>


    <p>
    Start now!
    </p>
    <%= link_to "Sign up!", new_user_registration_path, class: "btn btn-lg btn-primary", id:'bottone' %>
    </div>

<% end %>



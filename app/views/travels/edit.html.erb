<% provide(:title, "Modifica travel") %>

<h1>Edit your travel </h1>
<%= form_for(@travel, html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label 'Title' %><br>
  <%= f.text_field :title, class: 'form-control'%><br>

  <%= f.label 'Location' %><br>
  <%= f.text_field :location, class: 'form-control'%><br>

  <%= f.label 'Descripton' %><br>
  <%= f.text_area :description, class: 'form-control'%><br>

  <div>
      <% @travel.multiples.each_with_index do |multiple, index| %>
          <%= image_tag(multiple.thumb.url) %>
          <%= link_to "Delete", travel_multiple_path(@travel, index), :method => :delete, data: { confirm: "Are you sure you want to delete this image?" } %>
      <%end%>
  </div
  <br>
  <br>
  <%= f.submit "Save above changes", class: "btn btn-primary", id:"bottone"%>
<% end %>

<br>

<%= form_for @travel, url: travel_multiples_path(@travel), method: :post do |f| %>
   <%= render 'shared/error_messages', object: f.object %>

   <%= f.label :multiples, "Select one or more images" %>
   <span class="picture">   <%= f.file_field :multiples, multiple: true %> </span>

   <%=f.submit "Add images" , class: "btn btn-primary", id:"bottone"%>
<% end %>


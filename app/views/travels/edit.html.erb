<% provide(:title, "Modifica travel") %>

<h1>Modifica il tuo travel </h1>
<%= form_for(@travel, html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label ' Title' %><br>
  <%= f.text_field :title %><br>

  <%= f.label 'Description' %><br>
  <%= f.text_area :description %><br>


  <% if @travel.images? %>
    <%= image_tag @travel.images.url %>
    <div>
      <%= label_tag :remove_images do %>
        Remove image
        <%= f.check_box :remove_images %>
      <% end %>
    </div>
  <%else%>
      <%= f.label 'Seleziona immagine' %><br>
      <%= f.file_field :images, accept: 'image/jpeg,image/gif,image/png' %>

  <% end %>
  <% if @travel.multiples? %>
      <% @travel.multiples.each do |multiple| %>
          <%= image_tag multiple.url %>
      <% end %>
      <%= label_tag :remove_multiples do %>
        Remove images
        <%= f.check_box :remove_multiples %>
      <% end %>
  <% end %>
  <br>

  <%= f.label :multiples, "Seleziona una o piÃ¹ immagini" %>
  <%= f.file_field :multiples, multiple: true %>


  <%= f.submit "Salva", class: "btn btn-primary", id:"bottone"%>
<% end %>
